<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>xyz.joestr</groupId>
    <artifactId>zonemenu</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <name>ZoneMenu Development</name>
    <organization>
        <name>joestr</name>
        <url>https://joestr.xyz</url>
    </organization>
    <scm>
        <url>https://github.com/joestr/ZoneMenu/tree/dev</url>
        <developerConnection>joestr</developerConnection>
        <tag>zone, worldedit, worldguard, spigot-plugin</tag>
    </scm>
    <ciManagement>
        <url>https://ci.joestr.xyz/job/ZoneMenu_Dev/</url>
    </ciManagement>
    <issueManagement>
        <url>https://github.com/joestr/ZoneMenu/issues</url>
    </issueManagement>
    <distributionManagement>
        <repository>
            <id>joestr-repo</id>
            <url>https://repo2.joestr.xyz/repository/repo/</url>
        </repository>
        <snapshotRepository>
            <id>joestr-repo</id>
            <url>https://repo2.joestr.xyz/repository/repo/</url>
        </snapshotRepository>
    </distributionManagement>
    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <repositories>
        <repository>
            <id>repo-mirror</id>
            <name>Mirroring Repository</name>
            <url>https://repo2.joestr.xyz/repository/repo-mirror/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>joestr-repo-mirror</id>
            <name>joestr Mirroring Repository</name>
            <url>https://repo2.joestr.xyz/repository/repo-mirror/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    <dependencies>
        <!--Spigot API-->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.13.2-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <!--Bukkit API-->
        <!--<dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.13.2-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>-->
        <dependency>
            <groupId>com.sk89q.worldedit</groupId>
            <artifactId>worldedit-bukkit</artifactId>
            <version>7.0.0-SNAPSHOT</version>
            <classifier>dist</classifier>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.sk89q.worldguard</groupId>
            <artifactId>worldguard-legacy</artifactId>
            <version>7.0.0-SNAPSHOT</version>
            <classifier>dist</classifier>
        <scope>provided</scope>
    </dependency>
    </dependencies>
    <description>Simple, interactive menu for region creation with WorldGuard (and WorldEdit) for players. (Spigot)</description>
    <url>https://repo.joestr.xyz/zonemenu</url>
    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.java</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.yml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
</project>
